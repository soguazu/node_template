{
  "name": "node_template",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Stanley Oguazu",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "start": "ts-node dist/index.js",
    "build": "rimraf dist && rimraf docs && yarn run docs:api && tsc -p tsconfig.prod.json",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn run prettier -- --write",
    "check-format": "yarn run prettier -- --list-different",
    "validate": "yarn run build && yarn run check-format && yarn run lint && npm run build",
    "prepare": "husky install",
    "docs:api": "echo 'Building REST Docs...' && apidoc -i src/interfaces/http/routes/ -o docs/apidocs",
    "db:seed": "node \"dist/scripts/seed\""
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.176",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.5",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.6",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "apidoc": "^0.50.1",
    "awilix": "^5.0.1",
    "awilix-express": "^5.0.0",
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "convict": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.9.0",
    "espree": "^9.0.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^7.5.1",
    "mongoose": "^6.0.12",
    "mongoose-paginate-v2": "^1.4.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "request-ip": "^2.1.3",
    "winston": "^3.3.3",
    "winston-elasticsearch": "^0.15.9"
  }
}
